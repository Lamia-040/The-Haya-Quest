<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-color: #E8D6F5;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterController">

    <Label layoutX="210.0" layoutY="30.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Register" />

    <Label layoutX="100.0" layoutY="100.0" text="Full Name" />
    <TextField fx:id="nameField" layoutX="200.0" layoutY="95.0" prefWidth="250" />

    <Label layoutX="100.0" layoutY="150.0" text="Email" />
    <TextField fx:id="emailField" layoutX="200.0" layoutY="145.0" prefWidth="250" />

    <Label layoutX="100.0" layoutY="200.0" text="Password" />
    <PasswordField fx:id="passwordField" layoutX="200.0" layoutY="195.0" prefWidth="250" />

    <Button layoutX="220.0" layoutY="250.0" onAction="#handleRegister" prefHeight="25.0" prefWidth="88.0" style="-fx-background-color: #b48cc3;" text="Register" />

    <Label fx:id="messageLabel" layoutX="150.0" layoutY="300.0" prefWidth="300.0" style="-fx-font-size: 14px;" textAlignment="CENTER" />
    <Button layoutX="338.0" layoutY="250.0" onAction="#backToLogin" style="-fx-background-color: #D1C4E9;" text="Back to Login" />

</AnchorPane>
