<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.QuizResultController"
      spacing="15">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="scoreLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TextArea fx:id="correctAnswersArea" wrapText="true" editable="false" prefHeight="300"/>
</VBox>
